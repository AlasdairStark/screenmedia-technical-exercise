@model Screenmedia.ToDo.Web.Models.ToDoNotes.ToDoNoteViewModel

<div class="@(Model.Done ? "done":"")">
    <b>@Model.Title</b> - @Model.Description <br />
    
</div>
<div>
    @using (Html.BeginForm("Edit", "ToDoNotes", FormMethod.Get))
    {
        @Html.HiddenFor(m => m.Id)
        <input type="submit" value="Edit" />
    }

    @using (Html.BeginForm("Delete", "ToDoNotes", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id)
        <input type="submit" value="Delete" />
    }
</div>
